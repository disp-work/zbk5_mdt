<View displayBlock="true" controllerName="com.hcc.bk5.mdt.controller.Master" height="100%" xmlns="sap.m" xmlns:f="sap.f"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>appTitle}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<f:content>
					<SearchField search="onSearch" width="100%"/>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<smartTable:SmartTable entitySet="MdtSet" enableAutoBinding="true" useExportToExcel="true" useVariantManagement="true"
				useTablePersonalisation="true" persistencyKey="Mdt01" demandPopin="false" showTablePersonalisation="true" showRowCount="false"
				class="sapUiNoContentPadding" requestAtLeastFields="MdtTxt,MdtId">
				<Table growing="false" fixedLayout="true">
					<columns>
						<Column tooltip="{i18n>mdtInfo.lblMdtTxt}">
							<customData>
								<core:CustomData key="p13nData"
									value='\{"columnKey": "MdtTxt","leadingProperty": "MdtTxt","sortProperty": "MdtTxt","filterProperty": "MdtTxt"}'/>
							</customData>
							<Text text="{i18n>mdtInfo.lblMdtTxt}"/>
						</Column>
					</columns>
					<ColumnListItem type="Navigation" press="onItemPress">
						<cells>
							<ObjectIdentifier title="{MdtTxt}"/>
						</cells>
					</ColumnListItem>
				</Table>
			</smartTable:SmartTable>
		</f:content>
	</f:DynamicPage>
</View>